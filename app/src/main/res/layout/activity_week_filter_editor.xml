<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_week_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.spbau.mit.atum.WeekFilterEditorActivity">

    <TextView
        android:text="First free minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/first_minute"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="onFirstMinuteClick"
        android:textSize ="15dp" />

    <TextView
        android:text="Expected Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/first_minute"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="onDutationClick"
        android:textSize ="15dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Select days of week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/days_of_week"
        android:layout_below="@+id/duration"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/checkBoxMonday"
        android:layout_below="@+id/days_of_week"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxMonday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxTuesday" />

    <CheckBox
        android:text="Wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxTuesday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxWednesday" />

    <CheckBox
        android:text="Thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxWednesday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxThursday" />

    <CheckBox
        android:text="Friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxThursday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxFriday" />

    <CheckBox
        android:text="Saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxFriday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxSaturday" />

    <CheckBox
        android:text="Sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxSaturday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxSunday" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button"
        android:onClick="onButtonOKClick" />


</RelativeLayout>
