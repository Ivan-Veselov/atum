<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.spbau.mit.atum.ui.AbstractFiltersHolderEditorActivity"
    android:alwaysDrawnWithCache="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="false"
    android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/task_editor_filter_list"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:layout_height="0dp"
        android:layout_weight="40"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="59dp">

        <Button
            android:text="@string/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/task_editor_apply_button"
            android:onClick="onClickApplyButton" />

        <Button
            android:text="@string/add_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/task_editor_apply_button"
            android:id="@+id/task_editor_add_filter_button"
            android:onClick="onClickAddFilterButton" />

    </RelativeLayout>

</LinearLayout>
