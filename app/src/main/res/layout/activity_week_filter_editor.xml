<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_week_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.spbau.mit.atum.ui.WeekFilterEditorActivity">

    <CheckBox
        android:text="@string/monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/checkBoxMonday"
        android:layout_below="@+id/days_of_week"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="@string/tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxMonday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxTuesday" />

    <CheckBox
        android:text="@string/wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxTuesday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxWednesday" />

    <CheckBox
        android:text="@string/thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxWednesday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxThursday" />

    <CheckBox
        android:text="@string/friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxThursday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxFriday" />

    <CheckBox
        android:text="@string/saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxFriday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxSaturday" />

    <CheckBox
        android:text="@string/sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxSaturday"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBoxSunday" />

    <Button
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/week_filter_editor_OK"
        android:onClick="onButtonOKClick" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/week_filter_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="@string/name" />

    <CheckBox
        android:text="@string/exclusionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isExclusionary"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/week_filter_name"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/first_minute_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isExclusionary"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp">

        <TextView
            android:text="@string/begin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8" />

        <TextView
            android:text="@string/time"
            android:layout_width="0dp"
            android:layout_weight="24"
            android:layout_height="wrap_content"
            android:id="@+id/first_minute"
            android:clickable="true"
            android:onClick="onFirstMinuteClick" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/duration_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_minute_layout"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp">

        <TextView
            android:text="@string/end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:id="@+id/interval_start" />

        <TextView
            android:text="@string/time"
            android:layout_width="0dp"
            android:layout_weight="24"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            android:clickable="true"
            android:onClick="onDurationClick" />

    </LinearLayout>

    <TextView
        android:text="@string/select_days_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/days_of_week"
        android:layout_below="@+id/duration_layout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp" />


</RelativeLayout>
