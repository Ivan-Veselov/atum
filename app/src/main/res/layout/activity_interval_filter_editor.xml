<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interval_filter_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.spbau.mit.atum.IntervalFilterEditorActivity">

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonOKClick"
        android:id="@+id/interval_filter_editor_OK" />

    <CheckBox
        android:text="Free time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/isFreeTime"
        android:checked="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Interval starts:"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isFreeTime"
        android:layout_marginTop="51dp"
        android:id="@+id/interval_start"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Time"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interval_start_date"
        android:layout_marginTop="18dp"
        android:id="@+id/interval_start_time"
        android:clickable="true"
        android:onClick="onStartIntervalTimeClick"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Date"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/interval_start_date"
        android:clickable="true"
        android:onClick="onStartIntervalDateClick"
        android:layout_below="@+id/interval_start"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Time"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interval_end_date"
        android:layout_alignEnd="@+id/interval_end_date"
        android:layout_marginTop="14dp"
        android:id="@+id/interval_end_time"
        android:clickable="true"
        android:onClick="onEndIntervalTimeClick"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interval_end_date"
        android:clickable="true"
        android:onClick="onEndIntervalDateClick"
        android:layout_below="@+id/interval_end"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Interval ends:"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/interval_end"
        android:layout_below="@+id/interval_start_time"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
