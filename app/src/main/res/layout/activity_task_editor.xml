<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.spbau.mit.atum.AbstractFiltersHolderEditorActivity"
    android:alwaysDrawnWithCache="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="false">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/task_editor_name_field"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Name"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/task_editor_name_field"
        android:id="@+id/task_editor_description_field"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:hint="Description" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/task_editor_duration_field"
        android:layout_below="@+id/task_editor_description_field"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Duration" />

    <Button
        android:text="Apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/task_editor_apply_button"
        android:onClick="onClickApplyButton" />

    <Button
        android:text="Add filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/task_editor_apply_button"
        android:id="@+id/task_editor_add_filter_button"
        android:onClick="onClickAddFilterButton" />

    <Button
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_editor_location_button"
        android:layout_below="@+id/task_editor_duration_field"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickLocationButton" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/task_editor_filter_list"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/task_editor_location_button"
        android:layout_above="@+id/task_editor_apply_button" />
</RelativeLayout>
